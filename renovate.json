{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [ "config:base" ],
  "matchPackageNames": ["hashicorp/terraform"],
  "groupName": "terraform",
  "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
  "automerge": true,
  "autoApprove": true,
  "updateLockFiles": true,
  "lockFileMaintenance": { "enabled": true }       
}
