{
  "extends": ["config:base"],
  "packageRules": [
    {
      "groupName": "terraform",
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "autoApprove": true,
      "updateLockFiles": true,
      "lockFileMaintenance": { "enabled": true }
    }
   ],
  "dependencies": {
    "renovate": "^34.0.0",
    "automerge": true,
    "autoApprove": true
  },
  "scripts": {
    "renovate": "renovate --token $(./get-github-app-token.sh)"
  }
}
